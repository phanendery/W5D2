<!DOCTYPE html>
<html>
  <head>
    <title>Reddit</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
    <%= current_user.username %>
    <%= button_to "Sign Out", session_url, method: :delete%>
    <%= link_to "New Sub", new_sub_url %>
    <% end %>
    <% if flash[:errors] %>
      <% flash[:errors].each do |err| %>
          <%= err %>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
